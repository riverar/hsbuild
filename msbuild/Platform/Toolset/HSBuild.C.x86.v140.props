      <ExecutablePath Condition=" '$(ExecutablePath)' == '' "   >$(VSInstallDir)Common7\IDE\CommonExtensions\Microsoft\TestWindow;$(VSInstallDir)Common7\IDE;$(VCInstallDir)bin;$(VSInstallDir)Common7\Tools;$(FrameworkDir)$(FrameworkVersion);$(VCInstallDir)VCPackages;$(ProgramFiles)\HTML Help Workshop;$(VSInstallDir)Team Tools\Performance Tools;$(WindowsSdkDir)bin\x86;$(FrameworkToolDir);$(PATH);</ExecutablePath>
